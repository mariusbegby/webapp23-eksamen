generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Athlete {
  id            Int            @id @default(autoincrement())
  userId        String         @unique
  gender        String
  sport         String
  metaId        Int            @unique
  meta          Meta           @relation(fields: [metaId], references: [id])
  trainingGoals TrainingGoal[]
  activities    Activity[]
}

model IntensityZone {
  id        Int    @id @default(autoincrement())
  type      String
  zone      Int
  intensity Int
  metaId    Int
  Meta      Meta   @relation(fields: [metaId], references: [id])

  @@unique([metaId, type, zone])
}

model Meta {
  id             Int             @id @default(autoincrement())
  heartrate      Int
  watt           Int
  speed          Int
  athlete        Athlete?
  intensityZones IntensityZone[]
}

model TrainingGoal {
  id        Int      @id @default(autoincrement())
  name      String
  deadline  DateTime
  goal      Int
  comment   String
  athleteId Int
  Athlete   Athlete  @relation(fields: [athleteId], references: [id])
}

model Activity {
  id        Int        @id @default(autoincrement())
  date      DateTime
  name      String
  tags      String
  type      String
  goalId    String?
  athleteId Int
  Athlete   Athlete    @relation(fields: [athleteId], references: [id])
  intervals Interval[]
  questions Question[]
}

model Question {
  id         String     @id @default(uuid())
  question   String
  type       String
  activities Activity[]
}

model Interval {
  id         String   @id @default(uuid())
  type       String
  duration   Int
  intensity  Int
  activityId Int
  Activity   Activity @relation(fields: [activityId], references: [id])
}

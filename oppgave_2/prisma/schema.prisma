generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Athlete {
  id              Int               @id @default(autoincrement())
  userId          String            @unique
  gender          String
  sport           String
  metaId          Int               @unique
  meta            Meta              @relation(fields: [metaId], references: [id])
  TrainingSession TrainingSession[]
  TrainingGoal    TrainingGoal[]
  Activity        Activity[]
}

model Meta {
  id        Int      @id @default(autoincrement())
  heartrate Int
  watt      Int
  speed     Int
  athlete   Athlete?
}

model TrainingSession {
  id           Int      @id @default(autoincrement())
  date         DateTime
  name         String
  tags         String
  activityType String
  athleteId    Int
  Athlete      Athlete  @relation(fields: [athleteId], references: [id])
}

model TrainingGoal {
  id        Int      @id @default(autoincrement())
  name      String
  deadline  DateTime
  goal      Int
  comment   String
  athleteId Int
  Athlete   Athlete  @relation(fields: [athleteId], references: [id])
}

model Activity {
  id        Int        @id @default(autoincrement())
  date      DateTime
  name      String
  tags      String
  type      String
  goalId    String?
  athleteId Int
  Athlete   Athlete    @relation(fields: [athleteId], references: [id])
  intervals Interval[]
  questions Question[]
}

model Question {
  id         String     @id @default(uuid())
  question   String
  type       String
  activities Activity[]
}

model Interval {
  id         String   @id @default(uuid())
  duration   Int
  intensity  Int
  activityId Int
  Activity   Activity @relation(fields: [activityId], references: [id])
}

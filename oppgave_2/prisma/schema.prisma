generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Athlete {
  id              Int               @id @default(autoincrement())
  gender          String
  sport           String
  TrainingSession TrainingSession[]
  TrainingGoal    TrainingGoal[]
}

model TrainingSession {
  id           Int      @id @default(autoincrement())
  date         DateTime
  name         String
  tags         String
  activityType String
  athleteId    Int
  Athlete      Athlete  @relation(fields: [athleteId], references: [id])
}

model TrainingGoal {
  id        Int      @id @default(autoincrement())
  name      String
  deadline  DateTime
  goal      Int
  comment   String
  athleteId Int
  Athlete   Athlete  @relation(fields: [athleteId], references: [id])
}
